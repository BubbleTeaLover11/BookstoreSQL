<head>
    <title>Customers</title>
</head>
<body>
    <nav>
    <a href="/">Home Page</a> 
    <a href="/books">Books</a> 
    <a href="/publishers">Publishers</a> 
    <a href="/authors">Authors</a>  
    <a href="/customers">Customers</a>
    <a href="/orders">Orders</a>  
    <a href="/orderdetails">Orders Details</a>
    </nav>
    <main>
    <h1>Customers Page</h1>
    <p>This is the Customers page that shows the customers' full name and email.</p>    
    <table> 
            {% if data %}
                <thead>
                    <th>
                        <strong>
                        Customer ID
                        </strong
                    </th>
                    <th>
                        <strong>
                        First Name
                        </strong
                    </th>
                    <th>
                        <strong>
                        Last Name
                        </strong
                    </th>
                    <th>
                        <strong>
                        Email
                        </strong>
                    </th>
                    <th>
                        <strong>
                        Edit
                        </strong>
                    </th>
                    <th>
                        <strong>
                        Delete
                        </strong>
                    </th>
                </thead>
                <tbody>
                <tr>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <td>
                        {{item['ID']}}
                    </td> 
                    <td>
                        {{item['FirstName']}}
                    </td> 
                    <td>
                        {{item['LastName']}}
                    </td> 
                    <td>
                        {{item['Email']}}
                    </td> 
                    <td><a href="/edit-customer/{{item['ID']}}" class="button edit-btn">Edit</a></td>
                    <td><a href="/delete-customer/{{item['ID']}}" class="button delete-btn">Delete</a></td>
                <tr>
                    {% endfor %} 
            {% endif %} 
        </table>
    <p>&nbsp;</p>
    <form method="POST" id="addCustomer" action="/create-customer">
        <legend><strong>Add Customer</strong></legend>
            <fieldset class="fields">
                <label> First Name </label><input type="text" name="FirstName" required>
                <label> Last Name </label><input type="text" name="LastName" required>
                <label> E-mail Address </label><input type="email" name="Email" required>
            </fieldset>
                <input class="btn" type="submit" id="addCustomer" value="Add Customer">
    </form>
    <p>&nbsp;</p>
    </main>
</body>
